<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Panel id="idPnl">
		<FlexBox id="idFB" alignItems="Center" justifyContent="Start">
			<items>
				<HBox>
					<VBox class="questionCreateBox">
						<VBox justifyContent="Center">
							<Label text="{i18n>QuestionLabel}"/>
							<Input width="20rem" id="inputId0" placeholder="{i18n>QuestionText}"/>
						</VBox>
						<HBox>
							<Label text="{i18n>QuestionOptions}"/>
							<Button id="addInput" text="{i18n>OptionAdd}" icon="sap-icon://sys-add" type="Transparent" press="addInput"/>
						</HBox>
						<VBox justifyContent="Center">
							<Input width="20rem" id="inputId1" placeholder="Question option ..."/>
							<Input width="20rem" id="inputId2" placeholder="Question option ..."/>
						</VBox>
					</VBox>
				</HBox>
			</items>
		</FlexBox>
	</Panel>
</core:FragmentDefinition>