<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="eventManagementEVA.controller.aEvent"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.ui.layout.form">
	<Page title="{i18n>EventTitle}" showNavButton="true" navButtonPress="onNavBack">
		<FlexBox justifyContent="Center">
			<Image class="eventImage" src="/destinations/M38/sap/opu/odata/sap/ZTEAM2_SRV/EPictureSet('{IdEvent}')/$value" densityAware="false"/>
		</FlexBox>
		<HBox class="sapUiMediumMargin" wrap="Wrap" justifyContent="SpaceAround">
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" width="30rem" labelSpanXL="1" labelSpanL="1" labelSpanM="2" labelSpanS="4"
				adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1"
				singleContainerFullSize="false">
				<f:content>
					<Label text="Title"/>
					<Input id="Title" editable="{switchStateModel>/Editable}" value="{Title}"></Input>
					<Label text="Location"/>
					<Input id="Location" editable="{switchStateModel>/Editable}" value="{Location}"></Input>
					<Button id="bntSearch" text="Search" press="actSearch" visible="{switchStateModel>/Visible}"/>
					<Label text="Latitude"/>
					<Input id="Latitude" editable="{switchStateModel>/Editable}" value="{Latitude}" visible="false"></Input>
					<Label text="Longitude"/>
					<Input id="Longitude" editable="{switchStateModel>/Editable}" value="{Longitude}" visible="false"></Input>
					<Label text="Date"/>
					<DatePicker id="Date" required="true" valueFormat="YYYY-MM-dd"
						value="{path:'Data', type:'sap.ui.model.type.DateTime', formatOptions: {pattern: 'dd.MM.yyyy'}}" editable="{switchStateModel>/Editable}"/>
					<!--value="{path:'Data', type:'sap.ui.model.type.DateTime', formatOptions: { style: 'short'}}"/>-->
					<!--<Input id="eDataInput" width="35rem" editable="false"-->
					<!--	value="{ path: 'Data', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' } }"></Input>-->
					<Label text="Time"/>
					<Input id="Time" required="true" placeholder="HH:mm - HH:mm" value="{Time}" editable="{switchStateModel>/Editable}"/>
					<Label text="DressCode"/>
					<Input id="Dresscode" editable="{switchStateModel>/Editable}" value="{Dresscode}"/>
				</f:content>
			</f:SimpleForm>
			<VBox class="mapBox">
				<FlexBox id="map_canvas" width="25em" height="15em" fitContainer="true" justifyContent="Inherit" alignItems="Inherit"/>
			</VBox>
			<FlexBox id="questionBox" items="{toQuestion}" alignItems="Center" justifyContent="Start" wrap="Wrap">
				<HBox class="sapUiMediumMargin" justifyContent="Center">
					<Label text="{QuestionText}"/>
					<Select id="answerSelect" forceSelection="false" change="onSelectChange" items="{toPAnswer}">
						<core:Item key="{AnswerText}" text="{AnswerText}"/>
					</Select>
				</HBox>
			</FlexBox>
		</HBox>
		<!--<core:Fragment fragmentName="eventManagementEVA.view.qList" type="XML"/>-->
		<footer>
			<Toolbar>
				<Label id="createdBy"/>
				<ToolbarSpacer/>
				<Button id="acceptBtn" class="AcceptBtn" width="10em" text="{i18n>acceptBtnText}" type="Unstyled" press="onAcceptTap"></Button>
				<Button id="declineBtn" class="DeclineBtn" width="10em" text="{i18n>declineBtnText}" type="Unstyled" press="onDeclineTap"></Button>
				<Button id="confirmAnswersBtn" class="confirmBtn" width="10em" text="{i18n>confirmBtnText}" type="Transparent" press="onConfirmTap"></Button>
				<ToolbarSpacer/>
				<Switch id="switchBtn" customTextOn="View" customTextOff="Edit" state="false" change="onSwitchEditMode"/>
				<Button id="eventUpdate" text="Update" press="onUpdatePress" visible="{switchStateModel>/Visible}"></Button>
				<Button id="eventDelete" text="Delete" press="onDeletepress" visible="{switchStateModel>/Visible}"></Button>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>