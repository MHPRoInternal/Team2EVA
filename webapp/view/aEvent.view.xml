<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="eventManagementEVA.controller.aEvent"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.ui.layout.form">
	<Page title="{i18n>EventTitle}" showNavButton="true" navButtonPress="onNavBack">
		<HBox class="sapUiLargeMargin">
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" width="35rem" labelSpanXL="1" labelSpanL="1" labelSpanM="2" labelSpanS="4"
				adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1"
				singleContainerFullSize="false">
				<f:content>
					<Label text="Title"/>
					<Input id="Title" editable="false" value="{Title}"></Input>
					<Label text="Location"/>
					<Input id="Location" editable="false" value="{Location}"></Input>
					<Button id="bntSearch" text="Search" press="actSearch" visible="false"/>
					<Label text="Latitude"/>
					<Input id="Latitude" editable="false" value="{Latitude}" visible="false"></Input>
					<Label text="Longitude"/>
					<Input id="Longitude" editable="false" value="{Longitude}" visible="false"></Input>
					<Label text="Date"/>
					<DatePicker id="Date" required="true" valueFormat="yyyy-MM-dd" value="{Data}" editable="false"/>
					<!--value="{path:'Data', type:'sap.ui.model.type.DateTime', formatOptions: { style: 'short'}}"/>-->
					<!--<Input id="eDataInput" width="35rem" editable="false"-->
					<!--	value="{ path: 'Data', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' } }"></Input>-->
					<Label text="Time"/>
					<Input id="Time" required="true" placeholder="HH:mm - HH:mm" value="{Time}" editable="false"/>
					<Label text="DressCode"/>
					<Input id="Dresscode" editable="false" value="{Dresscode}"/>
				</f:content>
			</f:SimpleForm>
			<VBox class="mapBox">
				<FlexBox id="map_canvas" width="25em" height="15em" fitContainer="true" justifyContent="Inherit" alignItems="Inherit"/>
				<HBox>
					<FlexBox id="questionBox" items="{toQuestion}" alignItems="Center" justifyContent="Start">
						<HBox class="sapUiMediumMargin" justifyContent="Center">
							<Label text="{QuestionText}"/>
							<!--<Select id="answerSelect" forceSelection="true" items="{path: '{toPAnswer}'}">-->
							<Select id="answerSelect" forceSelection="true" items="{toPAnswer}">
								<core:Item key="{AnswerText}" text="{AnswerText}"/>
							</Select>
						</HBox>
					</FlexBox>
				</HBox>
			</VBox>
		</HBox>
		<!--<core:Fragment fragmentName="eventManagementEVA.view.qList" type="XML"/>-->
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button id="acceptBtn" class="AcceptBtn" width="10em" text="ACCEPT" type="Unstyled" press="onAcceptTap"></Button>
				<Button id="declineBtn" class="DeclineBtn" width="10em" text="DECLINE" type="Unstyled" press="onDeclineTap"></Button>
				<ToolbarSpacer/>
				<Switch id="switchBtn" customTextOn="View" customTextOff="Edit" state="false" change="onSwitchEditMode"/>
				<Button id="eventUpdate" text="Update" press="onUpdatePress"></Button>
				<Button id="eventDelete" text="Delete" press="onDeletepress"></Button>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>