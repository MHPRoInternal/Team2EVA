<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:vbm="sap.ui.vbm" xmlns="sap.m"
	controllerName="eventManagementEVA.controller.createEvent" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.ui.layout.form">
	<Page title="{i18n>createEventTitle}">
		<content>
			<f:SimpleForm layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false"
				emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
				<f:content>
					<Label text="Title"/>
					<Input id="Title" width="35rem" required="true"/>
					<Label text="Location"/>
					<Input id="Location" width="35rem" required="true"/>
					<Label text="Latitude"/>
					<Input id="Latitude" width="35rem" required="true"/>
					<Label text="Longitude"/>
					<Input id="Longitude" width="35rem" required="true"/>
					<Label text="Date"/>
					<DatePicker id="Date" required="true" valueFormat="yyyy-MM-ddThh:mm:ss" displayFormat="dd.MM.yyyy"/>
					<!--value="{path:'Data', type:'sap.ui.model.type.DateTime', formatOptions: { style: 'short'}}"/>-->
					<!--<Input id="eDataInput" width="35rem" editable="false"-->
					<!--	value="{ path: 'Data', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' } }"></Input>-->
					<Label text="Time"/>
					<Input id="Time" width="35rem" required="true" placeholder="HH:mm - HH:mm"/>
					<Label text="DressCode"/>
					<Input id="Dresscode" width="35rem" required="true"/>
					<Label text="Picture"/>
					<Input id="Picture" width="35rem" required="true"/>
				</f:content>
			</f:SimpleForm>
			<core:Fragment fragmentName="eventManagementEVA.view.qList" type="XML"/>
			<core:Fragment fragmentName="eventManagementEVA.view.qCreate" type="XML"/>
			<Button text="Add question" press="addQuestionPress"/>
			<vbm:GeoMap id="GeoMap" width="30%" height="30%"/>
			<!--<Button class="AcceptBtn" width="10rem" text="Send invites" type="Unstyled" press="onCreateTap"></Button>-->
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button id="createEvent" text="Create Event" press="onCreate"></Button>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>