<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml" controllerName="eventManagementEVA.controller.aDashboard">
	<Page title="{i18n>DashTitle}">
		<customHeader class="headerContent">
			<Toolbar>
				<Label text="Welcome, {IdUser}."></Label>
				<ToolbarSpacer/>
				<Button class="createEventBtn" id="createEventBtn" visible="false" width="7rem" text="{i18n>CreateEventBtn}" type="Unstyled"
					press="onCreatePress"></Button>
			</Toolbar>
		</customHeader>
		<content>
			<FlexBox class="sapUiSmallMargin columns" items="{toUserEvent}" wrap="Wrap" justifyContent="Center">
				<GenericTile id="genericTile" class="sapUiLargeMarginBegin sapUiLargeMargin tileLayout" header="{Title}"
					headerImage="{= ${Confirmation} === 'P' ? 'sap-icon://alert' : ''}" press="handlePress">
					<TileContent id="status" footer="{= ${Confirmation} === 'P' ? 'Pending' : ${Confirmation} === 'Y' ? 'Accepted' : 'Declined'} ">
						<ImageContent id="eventPicture" src="/destinations/M38/sap/opu/odata/sap/ZTEAM2_SRV/EPictureSet('{IdEvent}')/$value"/>
					</TileContent>
				</GenericTile>
			</FlexBox>
		</content>
	</Page>
</mvc:View>